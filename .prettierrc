{
  "printWidth": 80,
  "trailingComma": "all",
  "singleQuote": true,
  "semi": false,
  "overrides": [
    {
      "files": "*.{css,scss}",
      "options": {
        "parser": "css"
      }
    },
    {
      "files": "*.{md,mdx}",
      "options": {
        "parser": "markdown",
        "proseWrap": "always"
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html"
      }
    }
  ],
  "parser": "babel"
}
